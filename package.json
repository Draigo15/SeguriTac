{
  "name": "seguridadciudadanaapp",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:ci": "jest --ci --json --outputFile=jest-results.run.json",
    "test:ci:report": "jest --ci --json --outputFile=jest-results.json --reporters=default",
    "test:regression": "node scripts/jest-regression.js",
    "test:smoke:auth": "jest __tests__/authFlow.integration.test.js __tests__/sessionPersistence.test.js __tests__/sessionRoleMismatch.test.js --runInBand --colors --json --outputFile=jest-results.ci-smoke.json",
    "test:all": "jest --runInBand --colors --json --outputFile=jest-results.ci-all.json",
    "e2e:build": "detox build --configuration android.emu.debug",
    "e2e:test": "detox test --configuration android.emu.debug --config e2e/jest.config.js --record-logs all --record-videos all --take-screenshots all -l trace"
  },
  "dependencies": {
    "@expo/metro-runtime": "~4.0.1",
