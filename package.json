    "jest-expo": "^54.0.12",
    "mocha": "^11.7.5",
    "postcss": "^8.5.6",
    "react-test-renderer": "^18.3.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.3.3"
  },
  "private": true,
  "detox": {
    "behavior": {
      "init": {
        "keepLockFile": false,
        "reinstallApp": true,
        "exposeGlobals": true
      },
      "cleanup": {
        "shutdownDevice": false
      },
      "launchApp": "auto"
    },
    "testRunner": {
      "jest": {
        "setupTimeout": 300000,
        "teardownTimeout": 30000
      },
      "retries": 0,
      "forwardEnv": true
    },
    "configurations": {
      "android.emu.debug": {
        "device": {
          "type": "android.emulator",
          "device": {
            "avdName": "Pixel_6_API34"
          }
        },
        "app": {
          "type": "android.apk",
          "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
          "testBinaryPath": "android/app/build/outputs/apk/androidTest/debug/app-debug-androidTest.apk",
          "build": "cmd /C D:\\SeguridadAPP\\SeguridadCiudadanaApp\\android\\gradlew.bat -p D:\\SeguridadAPP\\SeguridadCiudadanaApp\\android assembleDebug assembleAndroidTest -DtestBuildType=debug"
        },
        "artifacts": {
          "rootDir": "artifacts"
        }
      }
    }
  }
